<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base dark background -->
    <item>
        <color android:color="#0A0A0A" /> <!-- Near black -->
    </item>

    <!-- Top-right radial glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="100%"
                android:centerY="0%"
                android:endColor="#00000000"
                android:gradientRadius="250dp"
                android:startColor="#89FFCC33"
                android:type="radial" />
        </shape>
    </item>

    <!-- Bottom-left radial glow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerX="0%"
                android:centerY="100%"
                android:endColor="#00000000"
                android:gradientRadius="250dp"
                android:startColor="#89FFCC33"
                android:type="radial" />
        </shape>
    </item>

</layer-list>
