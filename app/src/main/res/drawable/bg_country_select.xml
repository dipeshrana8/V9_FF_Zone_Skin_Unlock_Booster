<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient background with rounded left corners and stroke -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#1AFDB001"
                android:startColor="#0F1116"
                android:type="linear" />
            <corners
                android:bottomLeftRadius="@dimen/_10sdp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="@dimen/_10sdp"
                android:topRightRadius="0dp" />
            <stroke
                android:width="2dp"
                android:color="#FFBE00" />
        </shape>
    </item>

    <!-- Mask to remove stroke on the right side -->
    <item android:right="-3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Transparent right margin -->
    <item android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>