<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical"
    tools:context=".spalsh.RankActivity">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"

            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameNative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_5sdp"

                android:minHeight="@dimen/_180sdp" />

            <ImageView
                android:id="@+id/btnRank0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"

                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/img_rank_0" />

            <ImageView
                android:id="@+id/btnRank1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"

                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/img_rank_1" />

            <ImageView
                android:id="@+id/btnRank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"

                android:layout_weight="1"
                android:adjustViewBounds="true"

                android:src="@drawable/img_rank_2" />

            <ImageView
                android:id="@+id/btnRank3"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"

                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/img_rank_3" />

            <ImageView
                android:id="@+id/btnRank4"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"

                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/img_rank_4" />

            <ImageView
                android:id="@+id/btnRank5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"

                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/img_rank_5" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>