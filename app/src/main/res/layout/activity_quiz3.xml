<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical"
    tools:context=".spalsh.Quiz_3_Activity">

    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar_layout" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/homeplate_font"
                android:justificationMode="inter_word"
                android:text="3.How many players typically drop into a classic match? "
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/txtAns1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/bg_country_unselect"
                android:elevation="@dimen/_3sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"

                android:text="A. 30"
                android:textColor="@color/white"

                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtAns2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/bg_country_unselect"
                android:elevation="@dimen/_3sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"

                android:paddingHorizontal="@dimen/_10sdp"
                android:text="B. 100"
                android:textColor="@color/white"

                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtAns3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/bg_country_unselect"
                android:elevation="@dimen/_3sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/_10sdp"

                android:text="C.  50"
                android:textColor="@color/white"

                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/txtAns4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:background="@drawable/bg_country_unselect"
                android:elevation="@dimen/_3sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"

                android:paddingHorizontal="@dimen/_10sdp"

                android:text="D. 120"
                android:textColor="@color/white"

                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_dot3" />

            <FrameLayout
                android:id="@+id/frameNative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/_5sdp"

                android:minHeight="@dimen/_180sdp" />
        </LinearLayout>


    </ScrollView>

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_next" />

</LinearLayout>